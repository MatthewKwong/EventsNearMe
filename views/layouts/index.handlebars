<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>EventsNearMe</title>
  <!--Material Light-->
  <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
  <link rel="stylesheet" href="https://code.getmdl.io/1.3.0/material.indigo-pink.min.css">
  <script type="text/javascript" src="http://code.jquery.com/jquery-1.7.1.min.js"></script>
  <script defer src="https://code.getmdl.io/1.3.0/material.min.js"></script>
  <!--End of Material Light-->

  <script src="http://malsup.github.com/jquery.form.js"></script>

  <!--Custom CSS-->
  <link rel="stylesheet" href="/css/landingPage.css">
  <link rel="stylesheet" href="/css/style.css">

  <link rel = "icon" href = "/photos/ticket.png" type = "png" sizes="16x 16">
</head>

<body>


<div id = "banner-image">
  <div class = "slide fade">
    <img src = "/photos/concert.jpeg">
  </div>

  <div class = "slide fade">
    <img src = "/photos/basketball.jpg">
  </div>
  <div class = "slide fade">
    <img src = "/photos/food.jpg">
  </div>

  <div class = "slide fade">
    <img src = "/photos/museum.jpg">
  </div>
<div>
  <span class="dot"></span>
  <span class="dot"></span>
  <span class="dot"></span>
  <span class="dot"></span>
</div>



</div>

  <!-- Textfield with Floating Label -->
  <!-- <h1>HELLO</h1> -->
  <a href = "../"><h1 id = "logo">EventsNearMe</h1></a>
  <div class="searchbar">

    <form action="/search" method="GET" id="form">

      <!-- Type of Event -->
      <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label" style="margin-top: 20px; ">
        <input name="eventType" class="mdl-textfield__input " type="text" id="eventType" placeholder="Event or Category" style="color:white" value={{searchInfo.eventType}}>
        <!-- <label class="mdl-textfield__label " for="sample3">Event or Category</label> -->
      </div>


      <!-- Location  -->
      <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        <input name="location" class="mdl-textfield__input" id="location-autocomplete" type="text" id="sample3" placeholder="City, State" style="color:white" value={{searchInfo.location}}>
        <!-- <label class="mdl-textfield__label" for="sample3">Location</label> -->
      </div>


      <!-- Radius -->
      <!-- <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
    <input name = "radius" class="mdl-textfield__input" type="text" id="sample3" placeholder = "1">
    <label class="mdl-textfield__label" for="sample3">Radius (Miles)</label>
  </div> -->

      <!--Sart Time-->
      <!-- Use something like https://www.w3schools.com/tags/tryit.asp?filename=tryhtml5_input_type_time -->
      <div id="startTime-textfield" class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label test">
        <input name="startTime" class="mdl-textfield__input time" id="startTime" type="time" id="sample3" value="00:00" placeholder="time" value={{searchInfo.startTime}}>
        <!-- <label class="mdl-textfield__label"  for="sample3">Start Time</label> -->
      </div>

      <!-- End Time -->
      <div id="endTime-textfield" class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        <input name="endTime" class="mdl-textfield__input time" id="endTime" class="endTime" type="time" value="23:59" placeholder="time"value={{searchInfo.endTime}} >
        <!-- <label class="mdl-textfield__label" for="sample3">End Time</label> -->
      </div>

      <button type="submit" id="submit" class="mdl-button mdl-js-button mdl-button--raised"><b>Search</b></button>
    </form>
  </div>

    <!-- Define a container -->
   <div class="box-container">
      <div class="box sports" id="sports"><h1>Sports</h1></div>
      <div class="box food" id="food"><h1>Food</h1></div>
      <div class="box art" id="art"><h1>Art</h1></div>
      <div class="box music" id="music"><h1>Music</h1></div>
    </div>

  {{{body}}}

  <script src="https://maps.googleapis.com/maps/api/js?sensor=false&libraries=places&language=en"></script>
  <script type='text/javascript' src="/javascript/script.js"></script>

</body>

</html>
