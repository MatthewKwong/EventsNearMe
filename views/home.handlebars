<!--Have the card in an each bracket handler to use as a template each time. -->
<div id="search-container">

  {{#each events}}

    <div class="demo-card-wide mdl-card mdl-shadow--2dp">
      <div class="mdl-card__title" id="test" style="background: url({{this.logo.url}});   background-size: cover;
        background-repeat: none;">
        <h2 class="mdl-card__title-text">{{this.name.text}}</h2>

      </div>
      <div class="mdl-card__supporting-text">
        <p class="card-time">{{this.start.formatted}}</p>
        <p>{{this.description.text}}</p>
      </div>
      <div class="mdl-card__actions mdl-card--border">
        <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" href="{{this.url}}" target="_blank">Read More</a>
      </div>
      <div class="mdl-card__menu">
        <a href="mailto:?subject=Check out {{this.name.text}}! &amp;body=Check out the {{this.name.text}} event at {{this.url}}">
        <button class="mdl-button mdl-button--icon mdl-js-button mdl-js-ripple-effect">
      <i class="material-icons">share</i>
    </button>
  </a>
      </div>
    </div>

  {{/each}}
</div>
